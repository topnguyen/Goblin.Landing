@model ForgotPasswordModel
@{
    ViewData[MetadataKeys.Title] = "Forgot Password";

    ViewData[ContentKeys.HeaderNavTagContent] = "class='navbar navbar-expand-lg navbar-light' data-overlay";
    ViewData[ContentKeys.FooterStyle] = "position: fixed; bottom: 0; width: 100%; z-index: 1;";
}

@section Scripts
{
    <script type="text/javascript">
        $(function(){
            $.validator.unobtrusive.parse('form');
        })
    </script>
}

<div data-overlay class="min-vh-100 bg-light d-flex flex-column justify-content-md-center">
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-lg-5 col-md-6">
                    <div class="card card-body shadow">
                        <h1 class="h5 text-center">Reset Your Password</h1>
                        <p>
                            Enter your user account's verified email address and we will send you a reset password code.
                        </p>
                        @{
                            await Html.RenderPartialAsync("_ErrorMessage");
                        }
                        <form asp-controller="Auth" asp-action="SubmitForgotPassword" method="post" enctype="multipart/form-data" role="form">
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your Email"/>
                                <span asp-validation-for="Email" class="form-control-feedback text-warning"></span>
                            </div>

                            <button class="btn btn-primary btn-block" type="submit">Setup New Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
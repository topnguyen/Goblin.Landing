@using Goblin.Landing.Core
@model LoginModel
@{
    ViewData[MetadataKeys.Title] = "Login";

    ViewData[MetadataKeys.FaviconUrl] = "~/icons/home.ico";
}

@section Scripts
{
    <script type="text/javascript">
        $(function(){
            $(".navbar-container").remove();
            
            $("footer").remove();
            
            $.validator.unobtrusive.parse('form');
        })
    </script>
}

<section class="row no-gutters p-0 bg-light min-vh-100">
    <div class="col-lg-6 d-none d-lg-block order-lg-2">
        <img class="flex-fill" src="https://source.unsplash.com/collection/236802/1024x768" alt="@SystemSetting.Current.ApplicationName">
    </div>
    <div class="col-lg-6">
        <section class="p-0 bg-gradient text-white">
            <div class="container min-vh-lg-100 d-flex flex-column justify-content-between text-center py-4 py-md-5">
                <a href="@Url.Action("Index", "Home")" class="fade-page">
                    <img src="~/favicons/android-chrome-192x192.png" width="100" alt="@SystemSetting.Current.ApplicationName">
                </a>
                <div class="row justify-content-center my-5">
                    <div class="col-xl-7 col-lg-8">
                        <h1 class="h2 text-center mb-lg-5">Log In</h1>
                        <div class="card card-body shadow text-left text-dark">
                            <form id="login-form" asp-controller="Auth" asp-action="SubmitLogin" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">

                                <input asp-for="Continue" type="hidden"/>

                                <div class="form-group">
                                    <input asp-for="Email" class="form-control" placeholder="Email Address"/>
                                    <span asp-validation-for="Email" class="form-control-feedback text-warning"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" class="form-control" placeholder="Password" />
                                    <span asp-validation-for="Password" class="form-control-feedback text-warning"></span>
                                </div>

                                <button class="btn btn-primary btn-block" type="submit">Sign In</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-light fade-page">Back to Overview</a>
                </div>
            </div>
        </section>
    </div>
</section>
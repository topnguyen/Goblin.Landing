@model BlogModel

<nav>
    <ul class="pagination">
        @if (Model.CurrentPageNo > 1)
        {
            <li class="page-item">
                <a class="page-link rounded" href="@Url.Action("Index", "Blog")" aria-label="Previous">
                    <img src="/img/icons/interface/icon-arrow-left.svg" alt="Arrow Left" class="icon icon-xs bg-primary" data-inject-svg>
                </a>
            </li>
        }

        @if (Model.PreviousPageNo != null)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", "Blog", new {pageNo = Model.PreviousPageNo})">@Model.PreviousPageNo</a>
            </li>
        }

        <li class="page-item active">
            <a class="page-link" href="@Url.Action("Index", "Blog", new {pageNo = Model.CurrentPageNo})">@Model.CurrentPageNo</a>
        </li>

        @if (Model.NextPageNo != null)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", "Blog", new {pageNo = Model.NextPageNo})">@Model.NextPageNo</a>
            </li>
        }

        @if (Model.NextPageNo != null)
        {
            <li class="page-item">
                <a class="page-link rounded" href="@Url.Action("Index", "Blog", new {pageNo = Model.TotalPage})" aria-label="Next">
                    <img src="/img/icons/interface/icon-arrow-right.svg" alt="Arrow Right" class="icon icon-xs bg-primary" data-inject-svg>
                </a>
            </li>
        }
    </ul>
</nav>
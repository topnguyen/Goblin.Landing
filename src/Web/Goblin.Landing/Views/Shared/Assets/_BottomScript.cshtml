<!-- Removes page load animation when window is finished loading -->
<script type="text/javascript">
  window.addEventListener("load",function(){document.querySelector('body').classList.add('loaded');});
  
  // Elect Callback
  elect.ajaxify.fnAfterRedirect = function(url)
  {
    var DATA_API_KEY = "data-api";
    var baseKey = "load.goblin";
    
    goblinCountdown = "countdown";
    goblinCountup = "countup";
    goblinDropdownGrid = "dropdownGrid";
    goblinFlatpickr = "flatpickr";
    goblinIonRangeSlider = "ionRangeSlider";
    goblinIsotope = "isotope";
    goblinMapsStyle = "maps";
    goblinOverlayNav = "overlayNav";
    goblinReadingPosition = "readingPosition";
    goblinSticky = "sticky";
    goblinTwitterFetcher = "twitterFetcher";
    goblinTypedText = "typedText";
      
    $(window).trigger(baseKey + "." + goblinCountdown + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinCountup + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinDropdownGrid + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinFlatpickr + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinIonRangeSlider + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinIsotope + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinMapsStyle + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinOverlayNav + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinReadingPosition + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinSticky + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinTwitterFetcher + "." + DATA_API_KEY);
    $(window).trigger(baseKey + "." + goblinTypedText + "." + DATA_API_KEY);
  };
</script>
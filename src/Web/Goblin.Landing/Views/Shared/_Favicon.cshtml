@{
    string faviconUrl = ViewData[MetadataKeys.FaviconUrl]?.ToString() ?? "~/favicons/favicon.ico";
}

<!-- Favicon -->

<link id="favicon-ico" rel="icon" type="image/ico" href="@Url.AbsoluteContent(faviconUrl)" />
<link rel="apple-touch-icon" sizes="180x180" href="@Url.AbsoluteContent("~/favicons/apple-touch-icon.png")" />
<link rel="icon" type="image/png" sizes="32x32" href="@Url.AbsoluteContent("~/favicons/favicon-32x32.png")" />
<link rel="icon" type="image/png" sizes="16x16" href="@Url.AbsoluteContent("~/favicons/favicon-16x16.png")" />
<link rel="manifest" href="@Url.AbsoluteContent("~/favicons/manifest.json")" />
<link rel="mask-icon" href="@Url.AbsoluteContent("~/favicons/safari-pinned-tab.svg")" color="#2f2442" />
<meta name="theme-color" content="#ffffff" />